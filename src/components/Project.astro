---
interface slide_t{
    crdtitle : string,
    description : string,
    
};

const Slides: slide_t[] = [
    {
        crdtitle: "Introduction to AI",
        description: "An overview of artificial intelligence and its applications."
    },
    {
        crdtitle: "Deep Learning Basics",
        description: "Understanding neural networks and deep learning techniques."
    },
    {
        crdtitle: "Data Science Trends",
        description: "Latest trends and tools in data science and analytics."
    },
    {
        crdtitle: "Cloud Computing",
        description: "Exploring cloud infrastructure and services."
    },
    {
        crdtitle: "Cybersecurity Essentials",
        description: "Fundamentals of protecting digital assets and data."
    }
];
import Slide from "./ui/Slide.astro";
---
<di class="py-16">
    <div class="py-4 text-center">
        <h1 class="text-3xl font-semibold tracking-tight text-white sm:text-5xl">All my Projects</h1>
        <h3 class="text-base/8 text-gray-400 p-4">This is all my works , watch it</h3>
    </div>
    <div class="grid gap-4 py-4">
        {Slides.map((element)=>(
            <Slide 
                CrdTitle = {element.crdtitle}
                Description = {element.description}
            />
        ))}
    </div>
</div>