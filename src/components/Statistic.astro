---
interface Stat{
    num : number ,
    name : string
}

const statistic : Stat[] = [
    { num : 1 , name : "Project"},
    {num : 2, name: "Public repositories"},
    {num : 0, name: "Open source projects"}
]
---
<div class=" box-content p-4 rounded-lg md:p-8" id="stats" role="tabpanel" aria-labelledby="stats-tab">
    <dl class="grid grid-cols-3 gap-4">
        {statistic.map((element)=>(
        <div class="flex flex-col items-center justify-center">
            <dt class=" text-white sb-2 text-3xl font-extrabold">{element.num}</dt>
            <dd class="text-white">{element.name}</dd>
        </div>
        ))}
    </dl>
</div>